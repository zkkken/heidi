# ============================================
# EMR to Heidi Integration - 环境变量配置
# ============================================
# 将此文件复制为 .env 并填写实际值
# 命令: cp .env.example .env

# -------------------- Heidi Health API --------------------
# 必填：Heidi API Key (从 https://www.heidihealth.com/developers 获取)
HEIDI_API_KEY=your_heidi_api_key_here

# 可选：Heidi API 基础 URL（通常不需要修改）
HEIDI_BASE_URL=https://api.heidihealth.com

# 可选：认证用邮箱和内部 ID
HEIDI_AUTH_EMAIL=emr-demo@example.com
HEIDI_AUTH_INTERNAL_ID=1

# -------------------- 截图配置 --------------------
# 截图区域坐标 (left, top, width, height)
# 如何获取坐标：运行 `python integrations/standalone/main.py --coords`
# 然后移动鼠标到病人信息区域，记录坐标

# 示例：截取屏幕左上角区域
SCREENSHOT_LEFT=100
SCREENSHOT_TOP=200
SCREENSHOT_WIDTH=800
SCREENSHOT_HEIGHT=400

# 截图保存目录
SCREENSHOT_OUTPUT_DIR=./tmp/screenshots

# -------------------- OCR 配置 --------------------
# OCR 语言：'ch'=中文, 'en'=英文, 'ch_en'=中英混合
OCR_LANGUAGE=ch

# 是否使用角度分类器（提高识别准确率，但速度稍慢）
OCR_USE_ANGLE_CLS=True

# 是否使用 GPU 加速（需要 CUDA 支持）
OCR_USE_GPU=False

# OCR 识别置信度阈值 (0-1，越高越严格)
OCR_CONFIDENCE_THRESHOLD=0.6

# -------------------- EMR 系统配置 --------------------
# EMR 系统类型: 'generic_cn', 'generic_en', 'custom'
EMR_SYSTEM_TYPE=generic_cn

# 自定义解析规则文件路径（仅当 EMR_SYSTEM_TYPE=custom 时使用）
# EMR_PARSING_RULES_FILE=./config/custom_emr_rules.yaml

# -------------------- 日志配置 --------------------
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 调试模式（显示详细日志）
DEBUG_MODE=False

# 日志输出目录
LOG_OUTPUT_DIR=./tmp/logs

# -------------------- 高级配置 --------------------
# HTTP 请求超时时间（秒）
REQUEST_TIMEOUT=30

# API 调用重试次数
API_RETRY_COUNT=3

# 是否允许手动输入/修正识别结果
ALLOW_MANUAL_INPUT=True
